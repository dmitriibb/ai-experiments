{
  "manifest_version": 3,
  "name": "Meeting Timer Floating Window",
  "description": "Always-on-top meeting timer with small/medium modes and quick +5 control.",
  "version": "0.1.0",
  "permissions": [
    "windows",
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Open Meeting Timer",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
